generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  name String @unique

  projects Project[]
}

model Project {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  name String @unique
  image String
  summary String
  url String
  order Int

  category Category @relation(fields: [categoryId], references: [id])
  categoryId String @db.ObjectId
}

model Tool {
 id String @id @map("_id") @default(auto()) @db.ObjectId
 name String @unique
 icon String
 order Int
}

model Content {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  about_me_description String
  contact_me_description String
}

model Link {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  name String
  url String
}

model Metadata {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  title String
  description String
  keywords String[]
}